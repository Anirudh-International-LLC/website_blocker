{
    "manifest_version": 3,
    "name": "blocker",
    "version": "1.0",
    "description": "This is a simple Chrome extension.",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "BLOCKER.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "popup.html",
          "BLOCKER.png",
          "background.js",
                  "showblocked.js",
        "popup.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }