{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "2.0",
  "description": "",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/BLOCKER.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html/change.html",
        "html/popup.html",
        "html/unblock.html",
        "html/wait.html",
        "css/change.css",
        "css/popup.css",
        "css/unblock.css",
        "css/wait.css",
        "js/popup.js",
        "js/showblocked.js",
        "js/timeer.js",
        "js/updatetime.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
